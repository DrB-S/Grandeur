manifest {
  name = 'Grandeur Peak'
  author = 'Erin Young'
  homePage = 'https://github.com/UPHL-BioNGS/Grandeur'
  mainScript = 'grandeur.nf'
}

//########## Setting the Profile ##########
profiles {
  docker {
    docker.enabled = true
    docker.runOptions = "-u \$(id -u):\$(id -g)"
    includeConfig './configs/grandeur_template.config'
    }
  singularity {
    singularity.enabled = true
    singularity.autoMounts = true
    includeConfig './configs/grandeur_template.config'
    }
  uphl {
    includeConfig './configs/UPHL.config'
    }
  fastq_to_msa {
    params {
      prokka = true
      roary = true
      }
    }
  fasta_to_msa {
    params {
      prokka = true
      roary = true
      fastqc = false
      seqyclean = false
      spades = false
      }
    }
  gff_to_msa {
    params {
      roary = true
      spades = false
      mash = false
      fastqc = false
      seqyclean = false
      spades = false
      multiqc = false
      }
    }
  fastq_to_consensus {
    params {
      prokka = false
      roary = false
      }
    }
  extras_off {
    params {
      blobtools = false
      kraken2 = false
      fastqc = false
      fastani = false
      quast = false
      cg_pipeline = false
      seqsero2 = false
      shigatyper = false
      kleborate = false
      serotypefinder = false
      amrfinderplus = false
      mlst = false
      summary = false
      multiqc = false
      }
    }
  }

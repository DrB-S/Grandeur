manifest {
  name = 'Grandeur Peak'
  author = 'Erin Young'
  homePage = 'https://github.com/UPHL-BioNGS/Grandeur'
  mainScript = 'grandeur.nf'
}

//########## Setting the Profile ##########
profiles {
  docker {
    docker.enabled = true
    docker.runOptions = "-u \$(id -u):\$(id -g)"
    includeConfig './configs/grandeur_template.config'
    }
  singularity {
    singularity.enabled = true
    singularity.autoMounts = true
    includeConfig './configs/grandeur_template.config'
    }
  uphl {
    includeConfig './configs/UPHL.config'
    }
  msa {
    params.phylogenetic_processes = 'prokka, roary, iqtree2, snpdists'
    }
  fastq_to_msa {
    params.fastq_processes        = 'fastp, bbduk, spades, fastqc, cg_pipeline, shigatyper, mash, kraken2, summary, multiqc'
    params.contig_processes       = 'amrfinderplus, kleborate, fastani, mlst, quast, serotypefinder, seqsero2, blobtools, summary, multiqc, plasmidfinder'
    params.phylogenetic_processes = 'prokka, roary, iqtree2, snpdists'
    }
  fasta_to_msa {
    params.phylogenetic_processes = 'prokka, roary, iqtree2, snpdists'
    }
  fastq_to_consensus {
    params.fastq_processes        = 'fastp, bbduk, spades, fastqc, cg_pipeline, shigatyper, mash, kraken2, summary, multiqc'
    params.contig_processes       = 'amrfinderplus, kleborate, fastani, mlst, quast, serotypefinder, seqsero2, blobtools, summary, multiqc, plasmidfinder'
    params.phylogenetic_processes = 'prokka, roary, iqtree2, snpdists'
    }
  just_fastq {
    params.fastq_processes        = 'fastp, bbduk, fastqc, cg_pipeline, shigatyper, mash, kraken2, summary, multiqc, seqsero2, serotypefinder, plasmidfinder'
    }
  just_fasta {
    params.contig_processes       = 'amrfinderplus, kleborate, fastani, mlst, quast, serotypefinder, seqsero2, blobtools, summary, multiqc, kraken2, plasmidfinder'
    }
  extras_off {
    params.fastq_processes        = 'fastp, bbduk, spades'
    params.contig_processes       = ''
    }
  }
